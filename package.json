{
  "name": "typescript-node-boilerplate",
  "version": "0.0.0",
  "description": "Typescript template project",
  "license": "MIT",
  "author": "James Dunnam",
  "scripts": {
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "checkcommit": "node ./scripts/commit-lint.js",
    "clean": "run-p clean-lib clean-logs",
    "clean-deps": "rimraf ./*/**/node_modules yarn.lock ./node_modules ",
    "clean-lib": "rimraf coverage build tmp",
    "clean-logs": "rimraf *.log",
    "commit": "git-cz",
    "format": "./scripts/format.sh && yarn run sort-pj",
    "lint": "scripts/check-format.sh",
    "nuke": "run-s clean clean-deps",
    "sort-pj": "npx sort-package-json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-push": "yarn checkcommit && pretty-quick --check"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,yaml,yml,json,sh}": [
      "yarn run format",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "~26.0.20",
    "@types/node": "~14.14",
    "@typescript-eslint/eslint-plugin": "~4.0.0",
    "@typescript-eslint/parser": "~3.10.1",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.0.2",
    "cz-customizable": "^6.2.0",
    "eslint": "~7.19.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-tsdoc": "^0.2.11",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.8",
    "jest": "~26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.2.1",
    "pretty-quick": "^3.1.0",
    "rimraf": "~3.0.2",
    "satisfied": "^1.1.2",
    "sort-package-json": "^1.48.1",
    "syncpack": "^5.7.11",
    "ts-jest": "~26.5.0",
    "tsutils": "~3.20.0",
    "typescript": "~4.1.3"
  },
  "engines": {
    "node": ">= 12.13 <13"
  },
  "volta": {
    "node": "12.18.3",
    "npm": "6.14.5",
    "yarn": "1.22.5"
  }
}
